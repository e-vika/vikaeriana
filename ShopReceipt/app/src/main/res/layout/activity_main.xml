<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="vika.eriana.shopreceipt.MainActivity">

    <TextView
        android:id="@+id/komik"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komik"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/input2" />
    <EditText
        android:id="@+id/input1"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:gravity="center_vertical"/>
    <TextView
        android:id="@+id/majalah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Majalah"
        android:layout_alignBottom="@+id/input2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/input2"
        android:layout_below="@id/input1"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/resep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resep"
        android:layout_alignBottom="@+id/input3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/input3"
        android:layout_below="@id/input2"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/koran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Koran"
        android:layout_alignBottom="@+id/input4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/input4"
        android:layout_below="@id/input3"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/novel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Novel"
        android:layout_alignBottom="@+id/input5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/input5"
        android:layout_below="@id/input4"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <TextView
        android:id="@+id/tts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TTS"
        android:layout_alignBottom="@+id/input6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/input6"
        android:layout_below="@id/input5"
        android:layout_alignParentRight="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"/>
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/input6"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:text="Cek Faktur"
        android:onClick="showprice"/>
    <TextView
        android:id="@+id/result"
        android:layout_below="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
